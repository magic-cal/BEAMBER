{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist/server",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "typeRoots": ["node_modules/@types, util/types"],
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "types": [
      "webpack-env"
    ],
    "paths": { 
      "@/*": [
        "server/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "files": ["server/app.ts"],
  "include": [
    "server/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "swagger.json"]
}
